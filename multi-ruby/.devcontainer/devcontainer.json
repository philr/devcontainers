{
    "build": {
        "dockerfile": "./Dockerfile",
        "context": ".",
        "args": {
            "USER": "${localEnv:GITHUB_REPOSITORY_OWNER}",
            "RUBY_BASE": "${localEnv:RUBY_BASE}",
            "REPOSITORY": "${localEnv:GITHUB_REPOSITORY}",
            "RBENV_VERSIONS": "${localEnv:RBENV_VERSIONS}",
            "RBENV_GLOBAL_VERSION": "${localEnv:RBENV_GLOBAL_VERSION}",
            "RUBY_PLATFORM": "${localEnv:RUBY_PLATFORM}"
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": "false",
            "installOhMyZsh": "false",
            "installOhMyZshConfig": "false",
            "username": "devcontainer"
        },
        "ghcr.io/devcontainers/features/git:1": {
            "ppa": "true",
            "version": "latest"
        }
    },
    "remoteUser": "devcontainer"
}